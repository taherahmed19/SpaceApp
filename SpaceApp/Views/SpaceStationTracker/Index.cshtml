<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 align-self-center">
                <h1 class="page-title text-truncate text-dark font-weight-medium">ISS Live Tracker</h1>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 maxheight">
                <div id="cesiumContainer">
                    <!--Keep one element for info, error and success-->
                    <div class="notification-wrapper">
                        @*<div class="notification" data-notification-id="">
                                <div class="notification__text-wrapper">
                                    <p class="notification__title">Cannot click during animation</p>
                                </div>
                                <button class="notification__close-btn js-notification-close" type="button">
                                    <img src="/assets/images/close.svg" />
                                </button>
                            </div>
                            <div class="notification" data-notification-id="">
                                <div class="notification__text-wrapper">
                                    <p class="notification__title">Cannot click during animation</p>
                                </div>
                                <button class="notification__close-btn js-notification-close" type="button">
                                    <img src="/assets/images/close.svg" />
                                </button>
                            </div>*@
                    </div>

                    <div class="space-viewer-controls">
                        <button class="space-viewer-controls__item js-cesium-fullscreen" title="Toggle fullScreen">
                            <img class="space-viewer-controls__icon" src="/assets/images/fullscreen.svg" />
                        </button>
                        <button class="space-viewer-controls__item js-cesium-3d-globe" title="3D Globe">
                            <img class="space-viewer-controls__icon space-viewer-controls__icon--globe-icon space-viewer-controls__icon--3d-globe active" src="/assets/images/globe.svg" />
                            <img class="space-viewer-controls__icon space-viewer-controls__icon--globe-icon space-viewer-controls__icon--2d-globe" src="/assets/images/2d.svg" />
                            <img class="space-viewer-controls__icon space-viewer-controls__icon--globe-icon space-viewer-controls__icon--columbus-view" src="/assets/images/columbus-view.svg" />
                        </button>
                        <button class="space-viewer-controls__item js-cesium-follow-satellite" title="Follow Satellite">
                            <img class="space-viewer-controls__icon" src="/assets/images/magnifying-glass.svg" />
                        </button>
                        <button class="space-viewer-controls__item js-cesium-city-labels" title="Enable labels">
                            <img class="space-viewer-controls__icon" src="/assets/images/location-pin.svg" />
                        </button>
                    </div>
                    <div class="space-viewer-controls__layers js-cesium-scenes-panel">
                        <div class="space-viewer-controls__title">
                            <button class="space-viewer-controls__close">
                                Scene mode
                                <i class="fa-solid fa-chevron-right"></i>
                            </button>
                        </div>
                        <ul class="space-viewer-controls__filter">
                            <li class="space-viewer-controls__filter-item space-viewer-controls__filter-item--globe">
                                <input id="filter-3d-globe" type="radio" name="scene-mode" value="3d-globe" checked />
                                <label for="filter-3d-globe">
                                    <img class="space-viewer-controls__filter-icon" src="/assets/images/globe.svg" />
                                    <span>3D Globe</span>
                                </label>
                            </li>
                            <li class="space-viewer-controls__filter-item space-viewer-controls__filter-item--globe">
                                <input id="filter-2d-globe" type="radio" name="scene-mode" value="2d-globe" />
                                <label for="filter-2d-globe">
                                    <img class="space-viewer-controls__filter-icon" src="/assets/images/2d.svg" />
                                    <span>2D Globe</span>
                                </label>
                            </li>
                            <li class="space-viewer-controls__filter-item space-viewer-controls__filter-item--globe">
                                <input id="filter-columbus-view" type="radio" name="scene-mode" value="columbus-view" />
                                <label for="filter-columbus-view">
                                    <img class="space-viewer-controls__filter-icon" src="/assets/images/columbus-view.svg" />
                                    <span>Columbus View</span>
                                </label>
                            </li>
                        </ul>
                    </div>
                    <div class="space-viewer-controls__layers js-cesium-city-labels-panel">
                        <div class="space-viewer-controls__title">
                            <button class="space-viewer-controls__close">
                                Settings
                                <i class="fa-solid fa-chevron-right"></i>
                            </button>
                        </div>
                        <ul class="space-viewer-controls__filter">
                            <li class="space-viewer-controls__filter-item space-viewer-controls__filter-item--checkbox">
                                <input class="js-cesium-show-city-labels" id="filter-city-labels" type="checkbox" name="show-city-labels" value="show-city-labels" />
                                <div class="checkbox-indicator"></div>
                                <label for="filter-city-labels">
                                    <span>Show City Labels</span>
                                </label>
                            </li>
                            <li class="space-viewer-controls__filter-item space-viewer-controls__filter-item--checkbox">
                                <input class="js-cesium-show-city-labels" id="filter-atmopshere" type="checkbox" name="show-atmosphere" value="" />
                                <div class="checkbox-indicator"></div>
                                <label for="filter-atmopshere">
                                    <span>Show Atmosphere</span>
                                </label>
                            </li>
                            <li class="space-viewer-controls__filter-item space-viewer-controls__filter-item--checkbox">
                                <input class="js-cesium-show-city-labels" id="filter-lighting" type="checkbox" name="" value="show-lighting" />
                                <div class="checkbox-indicator"></div>
                                <label for="filter-lighting">
                                    <span>Enable lighting</span>
                                </label>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="loading-spinner">
                    <h1>Loading...</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="http://spaceappassets-local.co.uk/js/earth.js" defer></script>
